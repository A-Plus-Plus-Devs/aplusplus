{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "A++",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.a++",
				"match": "\\b(if|while|for|return|int|float|print|bool|void|string|echo)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.a++",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.a++",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.a++"
}